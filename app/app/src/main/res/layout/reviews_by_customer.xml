<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="371dp"
        android:layout_height="167dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:elevation="8dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <TextView
            android:id="@+id/textView30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Reviews"
            android:textColor="#090909"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cardBackgroundColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:layout_marginTop="30dp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="43dp"
                android:layout_height="48dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-50dp"
                android:text="Name"
                android:id="@+id/review_name_cu"
                android:textColor="#0E0E0E"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/cust_rate"
                style="@style/VerySmallRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-74dp"
                android:layout_marginTop="-15dp"
                android:numStars="5" />

            <TextView
                android:id="@+id/date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="-38dp"
                android:text="Review Date"
                android:textColor="#0B0A0A"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/content_txt"
                android:layout_width="341dp"
                android:layout_height="37dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Very good service. Completed in a very short time. Neat and perfect service. Thank You"
                android:textColor="#0C0C0C" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>